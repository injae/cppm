cmake_minimum_required(VERSION 3.10)
project(gtest--install NONE)

#==========================================
#Header
#==========================================
find_package(gtest  QUIET)
if(NOT gtest_FOUND AND NOT gtest_FIND_VERSION_EXACT)
    include(ExternalProject)
    if(NOT WIN32)
 # Linux or OSX Setting
        ExternalProject_Add(
        gtest
        #URL 
        GIT_REPOSITORY https://github.com/google/googletest.git
        #GIT_TAG 
        SOURCE_DIR repo
        # Defulat cppkg install path if you want to install global path, remove this options
        CMAKE_ARGS "-DCMAKE_INSTALL_PREFIX=$ENV{HOME}/.cppm/local "
        #CONFIGURE_COMMAND 
        #BUILD_COMMAND 
        #INSTALL_COMMAND 
        BUILD_IN_SOURCE true
        )
    else(NOT WIN32)
 # Windows Setting
        ExternalProject_Add(
        gtest
        #URL 
        GIT_REPOSITORY https://github.com/google/googletest.git
        #GIT_TAG 
        SOURCE_DIR repo
        CMAKE_ARGS "-DCMAKE_INSTALL_PREFIX=$ENV{HOME}/.cppm/local "
        #CONFIGURE_COMMAND 
        #BUILD_COMMAND 
        #INSTALL_COMMAND 
        BUILD_IN_SOURCE true
        )
    endif(NOT WIN32)
endif()
