cmake_minimum_required(VERSION 3.6)
project(Catch2-lastest-install C CXX)

include(${CMAKE_CURRENT_SOURCE_DIR}/cmake/cppm_tool.cmake)
download_package(Catch2 lastest GIT https://github.com/catchorg/Catch2.git   LOCAL
                 CMAKE_ARGS -DCATCH_BUILD_TESTING=OFF)

