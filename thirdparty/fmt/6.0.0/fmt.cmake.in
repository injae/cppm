cmake_minimum_required(VERSION 3.6)
project(fmt-6.0.0-install C CXX)

include(${CMAKE_CURRENT_SOURCE_DIR}/cmake/cppm_tool.cmake)
download_package(fmt
    6.0.0
    GIT https://github.com/injae/fmt.git
    LOCAL
    CMAKE_ARGS
        -DFMT_DOC=OFF
        -DFMT_TEST=OFF
        -DFMT_FUZZ=OFF
        ${CMAKE_ARGS}
    )

